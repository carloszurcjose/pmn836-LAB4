<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/image_view_logo"
        android:layout_width="300sp"
        android:layout_height="300sp"
        android:layout_marginTop="50dp"
        android:src="@drawable/starfleet_command_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/button_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/image_view_logo"
        app:layout_constraintStart_toStartOf="@+id/image_view_logo"
        app:layout_constraintEnd_toEndOf="@+id/image_view_logo"
        android:layout_marginTop="30dp"
        android:text="USS Enterprise\nNCC-1701-A"/>

    <Button
        android:id="@+id/button_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/button_a"
        app:layout_constraintStart_toStartOf="@id/button_a"
        app:layout_constraintEnd_toEndOf="@id/button_a"
        android:text="USS Enterprise\nNCC-1701-D"/>

    <Button
        android:id="@+id/button_numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/button_d"
        app:layout_constraintStart_toStartOf="@id/button_d"
        app:layout_constraintEnd_toEndOf="@id/button_d"
        android:text="USS Voyager\nNCC-74656"/>





</androidx.constraintlayout.widget.ConstraintLayout>